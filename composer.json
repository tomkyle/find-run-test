{
    "name": "tomkyle/find-run-test",
    "type": "library",
    "description": "Find and run the PHPUnit test for a single changed PHP class file, most useful when watching the filesystem",
    "keywords": ["phpunit", "unit testing", "watcher", "filesystem", "test runner"],
    "bin": ["bin/frt"],
    "require": {
    		"php": "^8.3",
        "symfony/console": "^7.1",
        "symfony/finder": "^7.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.63",
        "rector/rector": "^2.1",
        "phpunit/phpunit": "^12.0",
        "spatie/temporary-directory": "^2.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "tomkyle\\FindRunTest\\": "src/"
        }
    }
}
